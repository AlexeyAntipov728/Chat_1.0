<!--            <Image url="@Images/backgroundImage.png" />-->
<!--        </image>-->
    </ImageView>

    <TextField fx:id="textField" alignment="TOP_LEFT" layoutX="14.0" layoutY="618.0" maxHeight="77.0" maxWidth="454.0" onAction="#Enter" prefHeight="77.0" prefWidth="454.0" promptText="Текст сообщения" scaleShape="false" />
    <Button layoutX="14.0" layoutY="704.0" mnemonicParsing="false" onAction="#Send" prefHeight="32.0" prefWidth="106.0" text="Отправить" />
    <VBox fillWidth="false" layoutX="14.0" layoutY="36.0" prefHeight="572.0" prefWidth="327.0">
