<AnchorPane prefHeight="750.0" prefWidth="550.0" style="-fx-background-image: url(..Images/backgroundImage.png;)" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <ImageView fx:id="Background" disable="true" fitHeight="750.0" fitWidth="550.0" nodeOrientation="INHERIT" pickOnBounds="true" smooth="false">
