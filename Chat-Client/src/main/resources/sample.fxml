    <MenuBar layoutX="14.0" layoutY="1.0">
        <menus>
            <Menu mnemonicParsing="false" text="Main">
                <items>
               <MenuItem id="NickName" mnemonicParsing="false" text="Nickname">
                  <graphic>
                     <TextField fx:id="clientName" alignment="TOP_RIGHT" nodeOrientation="LEFT_TO_RIGHT" onAction="#enterNickName" promptText=" Введи nickname" />
                  </graphic></MenuItem>
                    <MenuItem mnemonicParsing="false" onAction="#login" text="Login" />
